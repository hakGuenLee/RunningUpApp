<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/page_name_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <TextView
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:textColor="#ff59D286"
        android:textSize="42sp"
        android:text="결과"
        android:textFontWeight="600"
        android:fontFamily="@font/scdream_bold"
        android:gravity="center_horizontal|top"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@id/page_name_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/running_time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="202dp"
        android:layout_height="32dp"
        android:text=" "
        android:textSize="15sp"
        android:textColor="#ff000000"
        android:textFontWeight="300"
        android:fontFamily="@font/pyeongchangpeace_light"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/running_time_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/result_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_box"
        app:layout_constraintTop_toBottomOf="@id/result_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <!-- 1행: 총거리 / 소요시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- 총거리 수직 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/scdream_bold"
                    android:text="총거리"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5km"
                    android:textColor="#ff59D286"
                    android:fontFamily="@font/scdream_bold"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- 소요시간 수직 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/scdream_bold"
                    android:text="소요시간"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37분"
                    android:textColor="#ff59D286"
                    android:fontFamily="@font/scdream_bold"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 2행: 평균페이스 / 최고페이스 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 평균페이스 수직 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평균페이스"
                    android:fontFamily="@font/scdream_bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/km"
                    android:textColor="#ff59D286"
                    android:fontFamily="@font/scdream_bold"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- 최고페이스 수직 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최고페이스"
                    android:fontFamily="@font/scdream_bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:50/km"
                    android:textColor="#ff59D286"
                    android:fontFamily="@font/scdream_bold"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/memo_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rounded_box"
        android:padding="26dp"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/memo_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- 아이콘 -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/memo_icon"
            android:contentDescription="아이콘"
            android:layout_marginEnd="8dp"/>

        <!-- 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>






    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/runBtn_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88"
        />

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="49dp"
        app:layout_constraintTop_toBottomOf="@id/runBtn_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:background="@drawable/result_btn_background"
            app:layout_constraintTop_toBottomOf="@id/runBtn_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/scdream_bold"
            android:text="저장하기"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20sp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>