<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/page_name_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <TextView
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:textColor="#ff59D286"
        android:textSize="42sp"
        android:text="결과"
        android:textFontWeight="600"
        android:fontFamily="@font/scdream_bold"
        android:gravity="center_horizontal|top"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@id/page_name_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/runBtn_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78"
        />


        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="280dp"
            android:layout_height="59dp"
            android:background="@drawable/result_btn_background"
            app:layout_constraintTop_toBottomOf="@id/runBtn_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>