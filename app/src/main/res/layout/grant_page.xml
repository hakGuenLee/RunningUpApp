<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/helloGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:alpha="1"
        android:fontFamily="@font/scdream_bold"
        android:gravity="center_horizontal|top"
        android:text="안녕하세요!"
        android:textColor="#ff59D286"
        android:textSize="42sp"
        app:layout_constraintTop_toBottomOf="@id/helloGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="192dp"
        android:layout_alignParentTop="true"
        android:textColor="#ff3D3D3D"
        android:textSize="20sp"
        android:lineSpacingExtra="8sp"
        android:text="러닝업은\n당신의 페이스에 비례한\n음량 조절로 신나고\n즐겁게 달릴 수 있도록\n동기부여를 도와주는 어플입니다"
        android:fontFamily="@font/scdream_light"
        android:gravity="center_horizontal|top"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@id/middleGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lastGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:layout_width="211dp"
        android:layout_height="96dp"
        android:textColor="#ff3D3D3D"
        android:textSize="20sp"
        android:text="앱의 실행에 필요한\n 권한을 허용해 주세요"
        android:lineSpacingExtra="8sp"
        android:fontFamily="@font/scdream_light"
        android:gravity="center_horizontal|top"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@id/lastGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <Button
        android:id="@+id/grantBtn"
        android:layout_width="160dp"
        android:layout_height="76dp"
        android:text="허용하기"
        android:textColor="#ffFFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/scdream_light"
        android:backgroundTint="#59D286"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="583dp"
        app:layout_constraintTop_toBottomOf="@id/btnGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>